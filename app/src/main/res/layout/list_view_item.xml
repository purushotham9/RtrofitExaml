<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/imageViewEnterprise"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/img_e_1_lista"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNameEnterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Empresa 1"
                android:textColor="#FF000000"
                android:layout_marginRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/text2"
                android:layout_toRightOf="@+id/imagemview"
                android:layout_toEndOf="@+id/imagemview"
                android:layout_toStartOf="@+id/text2"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/textViewCategory"
                android:text="NegÃ³cio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textStyle="italic"
                android:textColor="#8d8c8c"
                android:textSize="17sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textViewLocation"
                android:text="Brasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textColor="#8d8c8c"
                android:textSize="17sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>